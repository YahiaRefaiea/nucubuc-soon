doctype html
html(lang=root.lang, dir=root.dir)
  
  //##  HEAD  ##
  head
    
    //  TITLE AND META TAGS
    block title
      title #{root.title}
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    block meta
      meta(name="description", content=root.description)
      meta(name="author", content=root.author)
    
    //  INCLUDES
    link(rel="icon", type="image/png", href="includes/images/favicon.png")
    link(rel="stylesheet", href="includes/stylesheets/nuc.lite.css")
    script(src="includes/javascripts/nuc.lite.js")
  
  //##  BODY  ##
  body.loading
    
    //  CONTENT
    block content
  
  img(src="images/", style="display: none")