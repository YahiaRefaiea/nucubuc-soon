messageCase-height= baseline*2+(baseline/3)
textCase-height= baseline+(baseline/3)
statusCase-height= baseline+(baseline/3)


//  MAIN
.soon
  overflow: hidden
  height: 100%
  text-align: center
  .container
    width: 100%
    height: 100%
    > section
      z-index: 1
      position: absolute
      {align}: 0
      width: 100%


//  COPYRIGHTS
.soon .copyrights
  bottom: baseline
  height: baseline
  small
    display: block
    position: absolute
    bottom: 0
    {align}: 0
    width: 100%
    text-transform: lowercase


//  ROOT
.soon .root
  top: 50%
  height: (logo-height+baseline)+(messageCase-height*2)+(textCase-height+(baseline/3))+(statusCase-height+(baseline/3*2))
  //##    logo                   messageCase            textCase                       statusCase
  transform: translateY(-50%)
  transition: transition-luxury
.loading .soon .root
  height: logo-height


//  LOGO
.soon .root #logo
  margin-bottom: baseline


//  MESSAGE CASE
.soon .root .messageCase
  position: relative
  height: messageCase-height*2
  > *
    overflow: hidden
    position: absolute
    bottom: 0
    {align}: 0
    width: 100%
    height: messageCase-height
    &.soon1
      bottom: messageCase-height
    > div
      z-index: 1
      position: absolute
      bottom: -(translate*4)
      {align}: 0
      width: 100%
      transition: transition-luxury (duration3+0.5)
.soon.home .root .messageCase .soon1 > div,
.soon.home .root .messageCase .soon2 > div,
.soon.confirmation .root .messageCase .confirmation > div,
.soon.welcome .root .messageCase .welcome > div,
.soon.unsubscribe .root .messageCase .unsubscribe > div
  bottom: 0


//  TEXT CASE
.soon .root .textCase
  overflow: hidden
  position: relative
  height: textCase-height
  margin-bottom: (baseline/3)
  > div
    z-index: 1
    position: absolute
    bottom: -(translate*3)
    {align}: 0
    width: 100%
    line-height: textCase-height
    transition: transition-luxury (duration8+0.5)
.soon.home .root .textCase .soon,
.soon.confirmation .root .textCase .confirmation,
.soon.welcome .root .textCase .welcome,
.soon.unsubscribe .root .textCase .unsubscribe
  bottom: 0


//  STATUS CASE
.soon .root .statusCase
  position: relative
  overflow: hidden
  height: statusCase-height
  margin-bottom: (baseline/3*2)
  > h1,
  > div
    z-index: 1
    position: absolute
    bottom: -(translate*3)
    {align}: 0
    width: 100%
    line-height: statusCase-height
    transition: transition-luxury (duration9+0.5)
.soon.home:not(.typing):not(.errorEmail):not(.errorName) .root .statusCase .home,
.soon.typing .root .statusCase .typing,
.soon.errorEmail .root .statusCase .errorEmail,
.soon.errorName .root .statusCase .errorName
  bottom: 0