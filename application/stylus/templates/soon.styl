//  TRANSITION DELAY
.soon.delay .root
  &,
  .messageCase > * > div
    transition: transition-luxury 1.6s
  .textCase > div
    transition: transition-luxury (duration5+1.6)
  .statusCase > *
    transition: transition-luxury (duration7+1.6)
  .formCase
    transition: transition-luxury (duration8+1.6)
  .formCase .material-icons,
  .formCase .inputs > *
    transition: transition-luxury (duration12+1.6)

