symbol(a, b, c)
  top: unit(a, px)
  left: unit(b, px)
  background-color: c
svg(a, b, c)
  left: unit(a, px)
  width: unit(b, px)
  height: unit(c, px)
symbolRotate(min, max)
  delay= 0
  for a in min..max
    delay= (delay+step)*pattern
    &:nth-child({a})
      animation: rotate+a (duration-luxury*3) easing-luxury unit(delay, 's') infinite
      @keyframes rotate{a}
        100%
          transform: rotate(360deg)


#logo
  position: relative
  width: logo-letters-width
  height: logo-height
  margin: 0 auto
  luxuryTransition: 3
  div, svg
    display: block
    position: absolute
    top: 0
    left: 0
.waiting #logo
  width: logo-symbol-width*2.3


//  SYMBOL
#logo .symbol
  left: -16px
  width: logo-symbol-width
  height: logo-height
  luxuryTransition: 3
  > div
    width: logo-symbol-width*2.3
    height: logo-height
    animation: none
    > div
      width: 52px
      height: 52px
      border-radius: 50%
    &:nth-child(1) > div
      symbol: 1, 3, white
    &:nth-child(2) > div
      symbol: 0, 3, nuc4
    &:nth-child(3) > div
      symbol: 1, 0, nuc3
    &:nth-child(4) > div
      width: 49px
      height: 49px
      symbol: 4, 2, nuc2
    &:nth-child(5) > div
      symbol: 3, 4, nuc1
.waiting #logo .symbol
  left: 0
  > div
    symbolRotate: 1, 5


//  LETTERS
#logo .letters
  overflow: hidden
  top: 7px
  width: logo-letters-width
  height: logo-letters-height
  svg
    top: auto
    bottom: 0
    fill: letters
    luxuryMixin: 1, 7
    &:nth-child(1)
      svg: 0, 24, 25
    &:nth-child(2)
      svg: 25, 24, 25
    &:nth-child(3)
      svg: 50, 23, 27
    &:nth-child(4)
      svg: 75, 24, 25
    &:nth-child(5)
      svg: 101, 26, 33
    &:nth-child(6)
      svg: 129, 24, 25
    &:nth-child(7)
      svg: 154, 23, 27
.waiting #logo .letters svg
  bottom: -(translate*3)