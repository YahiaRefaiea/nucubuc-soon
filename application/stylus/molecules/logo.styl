#logo
  position: relative
  width: logo-width
  height: logo-height
  margin: 0 auto
  transition: transition
  div, svg
    display: block
    position: absolute
    top: 0
    left: 0 //  Must stay constant


//  MIXINS
symbol(a, b, c)
  top: unit(a, px)
  left: unit(b, px) //  Must stay constant
  background-color: c
svg(a, b, c, d)
  bottom: unit(a, px)
  left: unit(b, px) //  Must stay constant
  width: unit(c, px)
  height: unit(d, px)


//  SYMBOL
#logo .symbol
  width: logo-symbol-width
  height: logo-height
  div
    width: 52px
    height: 52px
    border-radius: 50%
    &:nth-child(1)
      symbol: 1, 3, white
    &:nth-child(2)
      symbol: 0, 3, nuc4
    &:nth-child(3)
      symbol: 1, 0, nuc3
    &:nth-child(4)
      width: 49px
      height: 49px
      symbol: 4, 2, nuc2
    &:nth-child(5)
      symbol: 3, 4, nuc1


//  LETTERS
#logo .letters
  top: 8px
  left: 16px  //  Must stay constant
  width: logo-letters-width
  height: logo-letters-height
  svg
    top: auto
    fill: letters
    &:nth-child(1)
      svg: 0, 0, 24, 25
    &:nth-child(2)
      svg: 0, 25, 24, 25
    &:nth-child(3)
      svg: 0, 50, 23, 27
    &:nth-child(4)
      svg: 0, 75, 24, 25
    &:nth-child(5)
      svg: 0, 101, 26, 32
    &:nth-child(6)
      svg: 0, 129, 24, 25
    &:nth-child(7)
      svg: 0, 154, 23, 27